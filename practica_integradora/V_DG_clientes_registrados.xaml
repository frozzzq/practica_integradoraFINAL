<Window x:Class="practica_integradora.V_DG_clientes_registrados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica_integradora"
        mc:Ignorable="d"
        Title="V_DG_clientes_registrados" Height="450" Width="800">

    <Border BorderBrush="Gray" BorderThickness="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Clientes Registrados" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" Grid.Row="0" Margin="0,5,0,5"/>
            <DataGrid x:Name="DGclientes" Grid.Row="1" AutoGenerateColumns="True" 
                      Margin="10" /> 

        </Grid>
    </Border>
    
</Window>
