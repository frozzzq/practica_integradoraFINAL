<Window x:Class="practica_integradora.V_inicio_sesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica_integradora"
        mc:Ignorable="d"
        Title="V_inicio_sesion" Height="200" Width="300">
    

        <Border Grid.Column="1" Grid.Row="1" BorderThickness="6" BorderBrush="#577C8E"
         CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                    <GradientStop Color="#F4EFEB" Offset="0.0"/>
                    <GradientStop Color="#C7D9E5" Offset="1.0" />
                </LinearGradientBrush>

            </Border.Background>

            <StackPanel>
                <TextBlock Text="INICIO DE SESION" FontSize="20" Margin="0,8,0,10" FontWeight="Bold" Foreground="#2F4157"
 HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>

                
                    <TextBlock Text="USUARIO" FontSize="14" Foreground="#FF222F3F" FontWeight="DemiBold" Margin="5,0,0,0"
                               HorizontalAlignment="Center"/>
                    <TextBox x:Name="usu"  Width="200" Margin="10,0,0,0"  Background="Transparent" BorderThickness="0,0,1,1" 
                             HorizontalAlignment="Center"/>

                

                

                    <TextBlock Text="CONTRASEÑA" FontSize="14" Foreground="#FF222F3F" FontWeight="DemiBold" Margin="5,0,0,0"
                               HorizontalAlignment="Center"/>
                    <PasswordBox x:Name="contra"  Width="200" Margin="10,0,0,0"  Background="Transparent" BorderThickness="0,0,1,1" 
                                 HorizontalAlignment="Center"/>
                    <Button x:Name="enviar_queja" Content="ENVIAR"  Margin="0,10,0,0" Background="#577C8E" Foreground="White" BorderBrush="Transparent" 
                     BorderThickness="0" Click="enviar_queja_Click" Width="100"/>
                

                
                

            </StackPanel>

        </Border>

    
</Window>
