<Page x:Class="practica_integradora.P_registrar_membresia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practica_integradora"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="P_registrar_membresia"
      Background="White">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Text="REGISTRO DE CLIENTE" HorizontalAlignment="Center"
           FontSize="20"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nombre:" Margin="0,0,10,0"/>
                <TextBox x:Name="TBnombre_membresia" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Costo:" Margin="0,0,10,0"/>
                <TextBox x:Name="TBcosto" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Duracion:" Margin="0,0,10,0"/>
                <TextBox x:Name="TBduracion_dias" Width="200"/>
            </StackPanel>
                

            <Button x:Name="btnRegistrarCliente" Content="Registrar" />
            <Button x:Name="btnEliminarCliente" Content="Eliminar" />
            <Button x:Name="btnMostrarClientes" Content="Mostrar" />

        </StackPanel>
    </Grid>
</Page>
