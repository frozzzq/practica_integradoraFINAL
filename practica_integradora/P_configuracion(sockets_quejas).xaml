<Page x:Class="practica_integradora.P_configuracion_sockets_quejas_"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practica_integradora"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="P_configuracion_sockets_quejas_"
      Background="White">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.Row="1" BorderThickness="6" BorderBrush="#577C8E"
             CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                    <GradientStop Color="#F4EFEB" Offset="0.0"/>
                    <GradientStop Color="#C7D9E5" Offset="1.0" />
                </LinearGradientBrush>

            </Border.Background>

            <StackPanel>
                <TextBlock Text="SOPORTE DEL SISTEMA" FontSize="20" Margin="0,8,0,10" FontWeight="Bold" Foreground="#2F4157"
     HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Envia tu queja: " FontSize="14" Foreground="#FF222F3F" FontWeight="DemiBold" Margin="5,0,0,0"/>
                    <TextBox x:Name="queja"  Width="200" Margin="10,0,0,0" Background="Transparent" BorderThickness="0,0,1,1" />
                    <Button x:Name="enviar_queja" Content="ENVIAR"  Margin="10,0,0,0" Background="#577C8E" Foreground="White" BorderBrush="Transparent" 
                         BorderThickness="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Estatus de conexion:" FontSize="14" FontWeight="DemiBold" Margin="5,15,0,0"/>
                    <TextBlock x:Name="estado_conexion" FontSize="15" Margin="10,20,0,0"/>
                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>
</Page>
